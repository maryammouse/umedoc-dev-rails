<%= render partial: 'html_header' %>
<style>
h3 {border-bottom: none;}
</style>
    <div align="center">
  <div style="padding-top: 100px;">
      <div class="progress" style="height: 30px;">
    <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%;">
  </div>
  </div>
  <div style="width: 40%;">
<h1>Almost There!</h1>
<% if params[:temporary_credential].nil? %>
    <p>Just a few more details and you'll be good to go!</p>
    <% end %>
    <% flash.each do |message_type, message| %>
  <div class="alert alert-<%= message_type %>"><span class="glyphicon glyphicon-star" aria-hidden="true"></span> <%= message %> <span class="glyphicon glyphicon-star" aria-hidden="true"></span></div>
<% end %>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger" style="width: 40%;">
      The form contains <%= pluralize(@user.errors.count, "error") %>.
    </div>
    <ul class="error_list">
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
                    <form action="/users" method="post" id="new_user">
                        <div class="form-group">
                            <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
                            </div>
                <div class="form-group">
                <input type="name" name="user[firstname]" placeholder="First name", class="form-control">
            </div>
            <div class="form-group">
                <input type="text" name="user[lastname]" placeholder="Last name", class="form-control">
            </div>
            <div class="form-group">
                <input type="password" placeholder="Password" name="user[password]" class="form-control">
            </div>
            <div class="form-group">
                <input type="password" placeholder="Password confirmation" name="user[password_confirmation]" class="form-control">
                </div>
            <div class="form-inline">
                <h3><span class="label label-info">Birthdate</span>
                    <%= date_select :user, :dob, {:order => [:month, :day, :year], :start_year => 1900, :end_year => (Time.now.year - 18) }, {:class => "form-control"} %>
        <p></h3>
        </div>
        <div class="form-inline">
            <h3>
        <span class="label label-info">Gender</span>
                <select class="form-control" name="user[gender]">
                    <option value="male">male</option>
                    <option value="female">female</option>
                    <option value="other">other</option>
                </select>
            </div>
            </h3>
            <div class="form-inline"><br>
            <input class="btn btn-primary" name="commit" type="submit"
            value="Create my account" id="SignupSubmit" />
            </div>
        </form>
</div>
