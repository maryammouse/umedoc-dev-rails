<a  name="contact"></a>
<div class="banner" style="background: url('<%= image_path 'blue_gradient_umedoc.jpg' %>') ">

  <div class="container">

    <div class="row">
      <div class="col-lg-6">
        <h2>Interested? Enter your email for updates!</h2>
      </div>
      <div class="col-lg-6">
        <form action="/mailing_list" method="POST" id="MailingList">
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>" />
          <div class="input-group">
            <input type="text" name="email" class="form-control input-lg" placeholder="Enter your email here" />
          <span class="input-group-btn">
                <input type="submit" value="Continue"
                       class="btn btn-info btn-lg" id="MailingListContinue" />
                </span>
          </div>
        </form>
      </div>
    </div>

  </div>
  <!-- /.container -->

</div>
<!-- /.banner -->

