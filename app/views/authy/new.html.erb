<%= render partial: 'html_header' %>
<style>
.countries-input { width: 10%;
  height: 33px;
  padding: 5px;
  border: 1px solid #ccc;
  border-radius: 3px;
  margin-top: 2px;
  .box-shadow(inset 0 1px 1px rgba(0,0,0,.075));
  .transition(~"border-color ease-in-out .15s, box-shadow ease-in-out .15s");}

</style>
<div style="padding-top: 100px;">
<div class="progress" style="height: 30px;">
  <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="5" aria-valuemin="0" aria-valuemax="100" style="width: 5%;">
  </div>
</div>
    <div align="center">
    <h1>Sign Up</h1>
    <div style="width: 40%">
    <% flash.each do |message_type, message| %>
        <div class="alert alert-<%= message_type %>"><%= raw(message) %></div>
    <% end %>

<% if @temporary_user.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger" style="width: 40%">
      The form contains <%= pluralize(@temporary_user.errors.count, "error") %>.
    </div>
    <ul class="error_list" style="border: 1px solid #333">
    <% @temporary_user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>
            <%= form_for(:temporary_user, url: signup_path) do |f| %>
         <div class="form-group">
            <%= f.email_field :username, class: 'form-control', placeholder: 'What is your email?' %>
            </div>
            <div class="form-inline">
                <select id="authy-countries" data-show-as='number' name='temporary_user[country_code]' class='form-control' style='width: 50px;'></select>
            <%= f.text_field :cellphone, class: 'form-control', style: 'width: 88.3%;', placeholder: 'What is your cellphone number?' %>
        </div>
          We only ask for your number so that we can keep your account safer. We will only ever message you about visit reminders or account recovery.
            <div class="form-inline" align="center"><br>
                <%= f.submit "Continue", class: "btn btn-primary", id: "PhoneContinue" %>
        </div>
    <% end %>
        </div>

    </div>
